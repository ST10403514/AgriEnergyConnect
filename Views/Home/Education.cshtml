@{
    ViewData["Title"] = "Education Hub";
}

<div class="container my-5">
    <!-- Introduction -->
    <div class="text-center mb-5">
        <h1 class="text-success">Education Hub</h1>
        <p class="lead">
            Discover resources and educational opportunities to advance sustainable agriculture and green energy solutions.
            Learn about innovative practices, renewable energy technologies, and eco-friendly farming techniques to empower your journey toward sustainability.
        </p>
    </div>

    <!-- Educational Resources -->
    <div class="mb-5">
        <h2 class="text-success mb-4">Resources</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card border-success">
                    <div class="card-body">
                        <h5 class="card-title text-success">Sustainable Farming Guide</h5>
                        <p class="card-text">
                            Explore best practices for organic farming, crop rotation, and soil health to reduce environmental impact and boost yields.
                        </p>
                        <a href="https://www.sustainableagriculture.net/" class="btn btn-outline-success" target="_blank">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-success">
                    <div class="card-body">
                        <h5 class="card-title text-success">Green Energy Solutions</h5>
                        <p class="card-text">
                            Understand how solar, wind, biogas, and hydro systems can power your farm sustainably and reduce energy costs.
                        </p>
                        <a href="https://www.energy.gov/eere/renewables" class="btn btn-outline-success" target="_blank">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Sessions Board -->
    <div>
        <h2 class="text-success mb-4">Upcoming Educational Sessions</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-success h-100">
                    <div class="card-body">
                        <h5 class="card-title text-success">Solar Energy for Farms</h5>
                        <p class="card-text"><strong>Date:</strong> May 15, 2025</p>
                        <p class="card-text"><strong>Time:</strong> 10:00 AM - 12:00 PM</p>
                        <p class="card-text"><strong>Location:</strong> Greenfield Community Center, Cape Town</p>
                        <p class="card-text">
                            Learn how to integrate solar panels into your farm operations for sustainable energy.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success h-100">
                    <div class="card-body">
                        <h5 class="card-title text-success">Organic Farming Webinar</h5>
                        <p class="card-text"><strong>Date:</strong> May 20, 2025</p>
                        <p class="card-text"><strong>Time:</strong> 2:00 PM - 3:30 PM</p>
                        <p class="card-text"><strong>Location:</strong> Online (Zoom)</p>
                        <p class="card-text">
                            Discover organic farming techniques to enhance soil health and crop quality.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success h-100">
                    <div class="card-body">
                        <h5 class="card-title text-success">Biogas Systems Workshop</h5>
                        <p class="card-text"><strong>Date:</strong> May 25, 2025</p>
                        <p class="card-text"><strong>Time:</strong> 9:00 AM - 11:00 AM</p>
                        <p class="card-text"><strong>Location:</strong> Sunny Acres Farm, Stellenbosch</p>
                        <p class="card-text">
                            Explore how biogas can convert farm waste into renewable energy.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>