@model AgriEnergyConnect.Models.DiscussionPost
@{
    ViewData["Title"] = "Create Discussion Post";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center text-success mb-4">AgriEnergyConnect</h2>
                    <h4 class="text-center mb-4">Create Discussion Post</h4>
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" placeholder="Title" required />
                            <label asp-for="Title" class="form-label">Title</label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea asp-for="Content" class="form-control" placeholder="Content" style="height: 150px" required></textarea>
                            <label asp-for="Content" class="form-label">Content</label>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Create Post</button>
                        </div>
                        <p class="text-center">
                            <a asp-action="Index" class="btn btn-secondary">Back to Forum</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}