@model AgriEnergyConnect.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container my-5">
    <h1 class="text-success">Edit Product</h1>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FarmerId" />
        <input type="hidden" asp-for="ProductionDate" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Product Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category</label>
            <select asp-for="Category" class="form-control" asp-items="@(new SelectList(new[] { "Crops", "Equipment", "Green Energy" }))">
                <option value="">Select a category</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price (R)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image URL (optional)</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Update Product</button>
            <a asp-action="Index" class="btn btn-secondary">Back to Marketplace</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}