@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="card-title text-success mb-4">AgriEnergyConnect</h2>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <h4 class="mb-4">Log Out</h4>
                        <p class="mb-4">Click below to confirm logout.</p>
                        <form method="post">
                            <button type="submit" class="btn btn-primary">Confirm Logout</button>
                        </form>
                    }
                    else
                    {
                        <h4 class="mb-4">Logged Out</h4>
                        <p class="mb-4">You have successfully logged out of the application.</p>
                        <a href="/" class="btn btn-primary">Return to Home</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>